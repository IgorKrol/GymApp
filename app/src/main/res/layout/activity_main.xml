<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">


    <include layout="@layout/toolbar_layout" />



    <Button
        android:id="@+id/instructors_button"
        android:layout_width="326dp"
        android:layout_height="99dp"
        android:layout_marginTop="236dp"
        android:text="Instructors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fitness_advice_button"
        android:layout_width="326dp"
        android:layout_height="99dp"
        android:text="fitness advice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitness_device_button" />

    <Button
        android:id="@+id/fitness_device_button"
        android:layout_width="326dp"
        android:layout_height="99dp"
        android:text="Fitness devices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructors_button" />

</androidx.constraintlayout.widget.ConstraintLayout>